  .ai-product-carousel__categories-wrapper-{{ ai_gen_id }} {
    padding: 0 16px 20px;
  }

  .ai-product-carousel__categories-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    overflow-x: auto;
    overflow-y: hidden;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    padding-bottom: 4px;
