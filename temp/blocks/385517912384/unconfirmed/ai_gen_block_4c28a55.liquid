  .ai-product-carousel__view-all-{{ ai_gen_id }} {
    background: none;
    border: none;
    color: {{ block.settings.view_all_color }};
    font-size: 14px;
    font-weight: 500;
    text-decoration: underline;
    cursor: pointer;
    white-space: nowrap;
    padding: 0;
