  .ai-product-carousel__card-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.card_border_hover_color }};
  }

  .ai-product-carousel__card-{{ ai_gen_id }}.visible {
    display: block;
    animation: slideUpFade-{{ ai_gen_id }} 0.5s ease forwards;
  }

