  .ai-product-carousel__categories-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-product-carousel__category-btn-{{ ai_gen_id }} {
    flex-shrink: 0;
    padding: 10px 20px;
    background-color: {{ block.settings.category_bg }};
    color: {{ block.settings.category_text }};
